<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SifremiUnuttum">

    <TextView
        android:id="@+id/textViewSifremiUnuttumEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textViewSifremiUnuttumEmail" />

    <EditText
        android:id="@+id/editTextSifremiUnuttumEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/buttonSifremiUnuttum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buttonSifremiUnuttum" />
</LinearLayout>